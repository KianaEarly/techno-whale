<!-- Loop over each object in the posts array -->
<div class="row">
{{#each posts as |post| }}
<div class="col-md-1"> </div>
<div class="col-md-2 mr-1 ml-1 mb-4 post card card-rounded">
  <div class="">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
<div class="col-md-1"> </div>
{{/each}}
</div>

